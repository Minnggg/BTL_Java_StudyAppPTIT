<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_btn_back"
            android:background="@null" />
        <TextView
            android:id="@+id/BangDiemText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_14sdp"
            android:text="Bảng điểm"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:background="@drawable/custom_background_scoretable">
        <TextView
            android:id="@+id/GPAArea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="GPA"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/GPAScore"
            android:layout_marginStart="@dimen/_170sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4.00"
            android:textColor="#FF9900"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginLeft="@dimen/_24sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:orientation="horizontal"
            android:background="@drawable/custom_background_scoretable_2">
            <TextView
                android:id="@+id/STT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="STT"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/TenHocPhan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center"
                android:text="Tên học phần"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/SoTC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Số TC"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/Tongket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tổng Kết"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:gravity="center"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>